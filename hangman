from random import sample
text=['desk','book','love','good','sandman','vampir','house']
word=sample(text,1)
print("*"*len(word[0]))
state=list(word)
newstate=['*']*len(word[0])
guesses=0
pokusana_slova=[]
while '*' in newstate:
    letter=input('try a letter:',)
    book=True
    while book:
        if letter  in pokusana_slova:
            letter=input('type a letter you haven\'t picked:',)
        else:
            book=False
    pokusana_slova.append(letter)
    if letter in word[0]:
        print("ima")
        for c in range(len(word[0])):
            if word[0][c]==letter:
                newstate[c]=word[0][c]
        print(''.join(newstate))
    else:
        guesses+=1
        if guesses == 6:
            print('izgubili ste')
            break
        print("nema")
    print("do sada ste pokusali",pokusana_slova,". Number of guessses left is :",6-guesses)
print("the end")
